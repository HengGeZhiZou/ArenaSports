<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="team.lw.arena.entity.Comment" table="comment" schema="project_db">
        <id name="id" column="id"/>
        <property name="commentsId" column="comments_id"/>
        <property name="reviewerId" column="reviewer_id"/>
        <property name="content" column="content"/>
        <property name="commentTime" column="comment_time"/>
    </class>
</hibernate-mapping>